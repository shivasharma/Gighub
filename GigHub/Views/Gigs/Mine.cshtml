@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcoming Gigs</h2>

<ul class="gigs">
    @foreach (var gigs in Model)
    {
        <li>
            <div class="date">
                <div class="month">@gigs.DateTime.ToString("MMM")</div>
                <div class="day">@gigs.DateTime.ToString("d ")</div>
            </div>


            <div class="details">
                <span class="artist">@gigs.Venue</span>
                <span class="genre">@gigs.Genre.Name</span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Gigs", new {id = gigs.Id})">Edit</a>|
                    <a class="js-cancel-gig" data-gig-id="@gigs.Id">Cancel</a>

                </div>

            </div>
        </li>
    }
</ul>
@section scripts{
    <script>
        $(document)
            .ready(function () {
                $(".js-cancel-gig")
                    .click(function (e) {
                        var link = $(e.target);


                        bootbox.dialog({
                            message: "Are you sure you want to cancel this gig?",
                            title: "Confirm",
                            buttons: {
                                no: {
                                    label: "No",
                                    className: "btn-default",
                                    callback: function () {
                                        bootbox.hideAll();
                                    }
                                },
                                yes: {
                                    label: "Yes!",
                                    className: "btn-danger",
                                    callback: function () {
                                        debugger;
                                        var url = "../api/gigs/" + link.attr("data-gig-id");
                                        $.ajax({
                                            url: url,
                                            method: "DELETE"
                                        })
                                            .done(function () {
                                                debugger;
                                                link.parents("li")
                                                    .fadeOut(function () {
                                                        $(this).remove();
                                                    });

                                            })
                                            .fail(function (err) {
                                                debugger;
                                                //alert("Somethig failed");
                                            });

                                    }
                                }
                            }

                        });

                    });

            });
    </script>

}