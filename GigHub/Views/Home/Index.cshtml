@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}



<ul class="gigs">
    @foreach (var gigs in Model)
    {
        <li>
            <div class="date">
                <div class="month">@gigs.DateTime.ToString("MMM")</div>
                <div class="day">@gigs.DateTime.ToString("d ")</div>
            </div>


            <div class="details">
                <span class="artist">@gigs.Artist.Name</span><br />
                <span class="genre">@gigs.Genre.Name</span>
                <button data-gig-id="@gigs.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going ?</button>
            </div>
        </li>
    }
</ul>

@section scripts{
    <script>

        $(document)
            .ready(function () {

                $(".js-toggle-attendance")
                    .click(function (e) {
                        var button = $(e.target);
                        $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                            .done(function () {
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Going");
                            })
                            .fail(function () {
                                alert("Something failed");
                            });
                    });

            });
    </script>
}